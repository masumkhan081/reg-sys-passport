<div class="mt-2 ps-5 ">
    <span id="the_delivery_guy" class="h5 border-info border-1 border-bottom rounded">
        <%= msg %>
    </span>
</div>
<div class="row mt-5 px-5 pt-3 ">
    <div class="col-md-7 pt-4 px-3 border-end border-info border-1 rounded-3  ">
        <form action="/signin" method="POST">
            <div class="form-group mb-2 w-75 ">
                <label for="email" class="text-start w-100 ">Email</label>
                <input type="email" name="email" id="email" class="form-control text-center " placeholder="Enter email" value="masumkhan.medilifesolution@gmail.com" />
            </div>
            <div class="form-group mb-2 w-75 ">
                <label for="password" class="text-start w-100 ">12345678</label>
                <input type="password " name="password" password="password" class="form-control text-center " placeholder="Password ? " value="<%=typeof password !='undefined' ? password : '123456' %>" />
            </div>
            <button type="submit " class=" mt-3 btn bg-success bg-opacity-50 float-start rounded w-50"> Login </button>
            <strong class="float-start mt-4 ms-1 ms-sm-3">No Account? <a href="/signup"
                    class="text-decoration-none text-danger">Sign Up</a></strong>
        </form>
        <br>
    </div>
    <div class="mt-md-0 mt-5 d-flex flex-column col-md-5 justify-content-around align-items-center border-start border-success border-1 rounded-3">
        <span class="h6 text-start text-black"> Or, Login In With</span>
        <button class="btn btn-outline-warning w-50">Google</button>
        <button class="btn btn-outline-success w-50">Gihub</button>
        <button class="btn btn-outline-primary w-50">Facebook</button>
    </div>
    <script>
        setTimeout(() => {
            const idmsg = "the_delivery_guy";
            document.getElementById(idmsg).innerHTML = " "
        }, 3000)
    </script>
</div>